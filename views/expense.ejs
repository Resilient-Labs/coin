    <section class="h-100 gradient-form" style="background-color: #eee;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black">
              <div class="row g-0">


                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-4">


                    <div>
                      <section>
                        <div class="col-lg-6">
                          <div class="text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                              style="width: 185px;" alt="logo">
                            <h4 class="mt-1 mb-5 pb-1">Track Your Expenses</h4>
                          </div>
                          <form id="newExpense" action="/expenses/createExpenses/" method="POST">
                            <input name="expenseName" type="text" placeholder="Title">
                            <!-- EXPENSE CATEGORY [can connect to a DB database]-->
                            <!-- Expense Back-End Team removed for loop as data is not reflected in the DB yet, and therefore, making the page crash. We kept the code, and once we know the collection name and have data to plug in, we will replug it into the EJS.-->
                            <!-- Add input for month -->
                            <input name="expenseCost" type="number" placeholder="cost">
                            <span>Is this a reoccuring expense?</span>
                            <input name="isRecurring" value="true" type="radio" id="isRepeating">
                            <label for="isRecurring">Yes</label>
                            <input name="isRecurring" value="false" type="radio" id="notRepeating">
                            <label for="notRepeating">No</label>
                            <input type="date" class="form-control" name="date" />
                            <select name="category" class="form-control" aria-label="Default select example" placeholder="Choose An Expense Category">
                              <option value="rent" name="rent">Rent</option>
                              <option value="utilities" name="utilities">Utilities</option>
                              <option value="food" name="food">Food</option>
                              <option value="transportation" name="transportation">Transportation</option>
                              <option value="miscellaneous" name="miscellaneous">Miscellaneous</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Add</button>
                            <button type="delete" class="btn btn-primary">Clear</button>
                          </form>
                      </section>
                      <section>
                        <img />
                      </section>
