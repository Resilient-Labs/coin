<%- include('partials/header') -%>
<!--------------------JM: this is the bootstrap v5.0 layout component-------------------->
<body>
    <main>
      <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
              <div class="card rounded-3 text-black">
                <div class="row g-0">
                  <div class="col-lg-6">
                    <section class="incomeImg">

                    </section>
                    
                  </div>
                  
                  <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">
      
                      <div class="text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                          style="width: 185px;" alt="logo">
                        <h4 class="mt-1 mb-5 pb-1">Track Your Coins</h4>
                      </div>
      
                      <!--------------------SM: this is the bootstrap v5.0 form component for the user to input their income-------------------->
                      <form>
                        <div class="mb-3">
                          <label for="inputIncome" class="form-label">Total</label>
                          <!------------------SM: I USED THE STEP ATTRIBUTE TO ALLOW FOR DECIMAL PLACES FOR
                        CALCULATING BUDGET IN 0.00 FORMAT-------------------------->
                          <input type="number" min="1" step="any" class="form-control" id="inputIncome1" name="userIncome">
                          <!-------------------SM: OPTIONAL HELP TEXT FOR USER---------------->
                          <div id="emailHelp" class="form-text">Please enter in 0.00 format.</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                        <button type="delete" class="btn btn-primary">Clear</button>
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>



        

        
    </main>
</body>
<%- include('partials/footer') -%>